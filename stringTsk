#include <iostream>
#include <ctime>
#include <cstdlib>
#include <cstring>
#include <string>


using namespace std;

void createArr(int arr[], int size){
  for(int elem=0;elem<size;++elem){
    arr[elem]=rand()%10;
  }
}

void printArr(int arr[], int size){
  for(int elem=0;elem<size;++elem){
    cout<<arr[elem]<<" ";
  }
}

void bubbleSortArr(int arr[], int *size){
  int tmp;
  for(int elem = 0; elem < *size; ++elem){
     for(int iter = 0; iter < *size-1;++iter){
       if(arr[iter]<arr[iter+1]){
         tmp=arr[iter];
         arr[iter]=arr[iter+1];
         arr[iter+1]=tmp;
       }
     }
  }
}

void printSorted(int arr[], int size){
  for(int elem=0;elem<size;++elem){
    cout<<arr[elem]<<" ";
  }
}

int main() {
  int size = 10;
  int arr[size];
  srand(time(NULL));
  cout<<"Array: "<<endl;
  createArr(arr,size);
  printArr(arr,size);
  cout<<endl;
  cout<<"Sorted: "<<" ";
  bubbleSortArr(arr,&size);
  printSorted(arr,size);
  cout<<endl;

  int num = rand()%10;
  cout<<"Num is -> "<<num<<endl;
  switch(num%4){
    case 1:
      cout<<"Mod is 1"<<endl;
      break;
    case 2:
      cout<<"Mod is 2"<<endl;
      break;
    case 3:
      cout<<"Mod is 3"<<endl;
      break;
    default:
      cout<<"Mod is 0"<<endl;
      break;
  }

  char str1[] = "Hello";
  char str2[] = "World";
  if(strcmp(str1,str2) == 0){
    cout<<"Strings are equal"<<endl;
  }
  else if(strcmp(str1,str2) > 0){
    cout<<"str1 > str2"<<endl;
  }
  else{
    cout<<"str1 < str2"<<endl;
  }

  cout<<strncat(str2,str1,5);

  int count = 0;
  char target = 'l';
  for(int i = 0; i < strlen(str1); ++i){
    if(str1[i] == target){
      count++;
    }
  }

  string str = "Hello";
  for(int len = 0; len < str.length(); ++len){
     str[len] = toupper(str[len]);
  }
  cout<<str<<endl;

  cout<<int(str[0])<<endl;
  

  return 0;
}
